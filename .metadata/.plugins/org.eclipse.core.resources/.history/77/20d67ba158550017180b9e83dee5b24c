package com.santana.solid.good;

public class LiskovExample {
	public void calculateArea(Shape shape) {
		shape.setHeight(2);
		shape.setWidth(3);
		assert shape.getArea() == 6 : printError("area", shape);
		assert shape.getHeight() == 2 : printError("length", shape);
		assert shape.getWidth() == 3 : printError("length", shape);
	}
	private String printError(String indentifier, Rectangle rect) {
		return "Unexpected value of " + indentifier + "  for instance of " + rect.getClass().getName();
	}
	public static void main(String[] args) {
		LiskovExample liskov = new LiskovExample();
		Rectangle rectangle = new Rectangle();
		rectangle.setHeight(2);
		rectangle.setWidth(8);
		liskov.calculateArea(rectangle);
		Square square = new Square();
		square.setSize(2);
		liskov.calculateArea(new Square());
	}
}
